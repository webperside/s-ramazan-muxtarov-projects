<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="user-book-db-jpa" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/library_db"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="hamid318"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="log4j.logger.org.hibernate" value="warn"/>
        </properties>
    </persistence-unit>
</persistence>